
	<div id="post_show_content" class="skinny_wrapper wrapper_padding">
		<header>
			<p class="date"><%= @post.created_at.strftime('%A, %B %d')%></p>
			<h1><%= @post.title%></h1>
			<hr>
		</header>

		<div id="content">
			<%= markdown @post.content %>
		</div>
		<% if user_signed_in? %>
			<div id = "admin_links">
				<%= link_to "Edit Post", edit_post_path(@post)%>
				<%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}%>
			</div>
		<% end %>

		<hr>

		<div id="share_box">
	     <p>Share The DO List</p>
		 <a onclick="javascript:window.open('https://facebook.com/share?text=<%= @post.title %> by @sachinOO7 - &amp;url=<%= url_for([@post,{only_path: false}]) %>', '_blank', 'width=800,height=500, top=200, left = 300');void(0);"><i class="fab fa-facebook"></i></a>
		 <a onclick="javascript:window.open('https://twitter.com/share?text=<%= @post.title %> by @sachinOx7 - &amp;url=<%= url_for([@post,{only_path: false}]) %>', '_blank', 'width=800,height=500, top=200, left = 300');void(0);"><i class="fab fa-twitter"></i></a>
		 <a onclick="javascript:window.open('https://plus.google.com/share?text=<%= @post.title %> by @sachin kumar - &amp;url=<%= url_for([@post,{only_path: false}]) %>', '_blank', 'width=800,height=500, top=200, left = 300');void(0);"><i class="fab fa-google-plus-square"></i></a>
		</div>

		<hr>

		<%= render 'disqus' %>

	</div> 
